{
  "name": "silverorange/botr_api",
  "description": "The Bits on the Run API PHP SDK.",
  "type": "library",
  "keywords": [ "bitsontherun" ],
  "homepage": "https://github.com/silverorange/botr-api",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Isaac Grant",
      "email": "isaac@silverorange.com"
    }
  ],
  "support": {
    "issues": "https://github.com/silverorange/botr-api/issues",
    "source": "https://github.com/silverorange/botr-api"
  },
  "require": {
    "php": ">=5.1.5"
  },
  "require-dev": {
    "silverorange/coding-standard": "^0.1.0"
  },
  "suggest": {
    "ext-curl": "Makes HTTP requests more efficient."
  },
  "scripts": {
    "lint": "./vendor/bin/phpcs",
    "post-install-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src",
    "post-update-cmd": "./vendor/bin/phpcs --config-set installed_paths vendor/silverorange/coding-standard/src"
  },
  "autoload": {
    "psr-0": {
      "BotrAPI" : ""
    }
  }
}
